@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>WDP Tutorials</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/css/mystyle.css" />
    <link href="https://fonts.googleapis.com/css?family=Niconne" rel="stylesheet" type="text/css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
          crossorigin="anonymous">
    <!-- Bootstrap JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
            crossorigin="anonymous"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body class="bgbackground">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AspNetCoreMvc</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HTML5Tutorial">HTML5Tutorial</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <h3>
        Shortcuts to the sections:
        <a href="#s1">Section 1</a>,
        <a href="#s2">Section 2</a>,
        <a href="#s3">Section 3</a>,
        <a href="#s4">Section 4</a>,
        <a href="#s5">Section 5</a> and
        <a href="#s6">Section 6</a>
    </h3>

    <article class="row">
        <!-- Headings -->
        <section id="linearshadow" class="col-md-4 col-sm-6 col-12">
            <header>1. Heading elements</header>
            <h1>This is h1 heading</h1>
            <h3>This is h3 heading</h3>
            <h6>This is h6 heading</h6>
        </section>

        <!-- Paragraph, line break, block div, and link -->
        <section id="s2" class="col-md-4 col-sm-6 col-12">
            <header>2. Paragraph, line break, block div, and link</header>
            <p>This is <br />a paragraph<br /> with line breaks</p>
            <p>This is a paragraph without line breaks</p>
            <div>This line uses block &lt;div&gt; element</div>
            <div>This line also uses block &lt;div&gt; element</div>
            <a href="https://www.canberra.edu.au">This is a link to UC website</a>
        </section>

        <!-- Text Format -->
        <section id="s3" class="col-md-4 col-sm-6 col-12">
            <header>3. Text Format</header>
            <pre>
            This is a preformatted text
                using HTML5 pre element
        </pre>
            <p>This text is <b>bold</b>, <i>italic</i>, and <em>emphasized</em> using b, i, and em elements, respectively. </p>
            <h3>This text uses <mark>mark element</mark> and <ins>ins element</ins></h3>
            <h3>This text uses <sup>sup element</sup> and <sub>sub element</sub></h3>
        </section>

        <!-- Image and video -->
        <section id="s4" class="col-md-4 col-sm-6 col-12">
            <header>4. Figure, img, video and iframe for YouTube</header>
            <figure>
                <img width="100" src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/61/HTML5_logo_and_wordmark.svg/512px-HTML5_logo_and_wordmark.svg.png" />
                <figcaption>Fig 1: HTML5 logo</figcaption>
            </figure>
            <br />
            <div class="video-container">
                <video width="300" loop muted autoplay="autoplay" preload="auto">
                    <source src="http://clips.vorwaerts-gmbh.de/VfE_html5.mp4" type="video/mp4">
                    Your browser does not support HTML5 video.
                </video>
                <div>Big Buck Bunny</div>
            </div>
            <br />
            <iframe width="300" height="200" src="https://www.youtube.com/embed/XMUYoiUlutM" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </section>

        <!-- The <input> element and its attributes -->
        <section id="s5" class="col-md-4 col-sm-6 col-12">
            <header>5. The input element and its attributes</header>
            <p>Input element:</p>
            <input />

            <p>Input element with placeholder attribute:</p>
            <input placeholder="Enter your password" />

            <p>Input element with value attribute:</p>
            <input value="Enter your password" />

            <p>Input element with value and disabled attributes:</p>
            <input value="Enter your password" disabled />

            <p>Input element with value and readonly attributes:</p>
            <input value="Enter your password" readonly />

            <p>Calendar</p>
            <input type="date" />

            <p>Checkbox</p>
            <input type="checkbox" /> Tick me

            <p>Button</p>
            <input type="submit" value="Click me" />

            <p>Radiobuttons</p>
            <input type="radio" /> Red
            <input type="radio" /> Green
            <input type="radio" /> Blue

            <p>Radiobuttons grouped by name attribute</p>
            <input type="radio" name="colour" /> Red
            <input type="radio" name="colour" /> Green
            <input type="radio" name="colour" /> Blue
        </section>

        <!-- Table and Lists -->
        <section id="s6" class="col-md-4 col-sm-6 col-12">
            <header>6. Table, unordered list, ordered list, and dropdown list</header>
            <p>Table</p>
            <table border="1" class="table-responsive">
                <tr>
                    <th>Tutorials</th>
                    <th>Assignment 1</th>
                    <th>Assignment 2</th>
                </tr>
                <tr>
                    <td>40%</td>
                    <td>30%</td>
                    <td>30%</td>
                </tr>
            </table>

            <p>Unordered List</p>
            <ul>
                <li>HTML5</li>
                <li>CSS3</li>
                <li>JavaScript</li>
            </ul>

            <p>Ordered List</p>
            <ol>
                <li>HTML5</li>
                <li>CSS3</li>
                <li>JavaScript</li>
            </ol>

            <p>Dropdown lists</p>
            <select name="phones">
                <option value="iphone">iPhone</option>
                <option value="ss">Samsung</option>
            </select>

            <select name="phones">
                <option disabled selected >Select an option</option>
                <option value="iphone">iPhone</option>
                <option value="ss">Samsung</option>
            </select>

            <p>Font Awesome</p>
            <div>
                <i class="fa fa-book"></i> Book <br />
                <i class="fa fa-home"></i> Home <br />
                <i class="fa fa-refresh"></i> Refresh <br />
                <i class="fa fa-facebook"></i> Facebook <br />
                <i class="fa fa-twitter"></i> Twitter <br />
            </div>

        </section>
    </article>

    <!-- Responsive image -->
    <section>
        <header>7. Responsive Image using Bootstrap</header>
        <picture>
            <source media="(min-width: 992px)" srcset="~/css/floriade_xs.jpg">
            <source media="(min-width: 768px)" srcset="~/css/floriade_xs.jpg">
            <img src="~/css/floriade_xs.jpg" alt="Floriade" class="img-fluid">
        </picture>
    </section>

    <script src="~/js/myjq.js"></script>
    <script src="~/js/myjs.js"></script>
</body>
</html>
